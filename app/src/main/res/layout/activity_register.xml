<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_general"
    android:gravity="top"
    android:padding="16dp"
    tools:context=".firstMain.FirstAppActivity">

    <ImageButton
        android:id="@+id/back_button"
        android:contentDescription="@string/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?android:attr/actionModeCloseDrawable"
        android:minHeight="49dp"
        />


    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:contentDescription="@string/everfood"
            android:layout_width="158dp"
            android:layout_height="160dp"
            android:src="@drawable/everfoodonpng" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_corner"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="8sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Ingrese Correo"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correos Validos"
                android:textColor="@color/black"
                android:textColorHint="#5D5D5D"
                android:textSize="18sp"
                android:background="@drawable/rounded_corner"
                android:padding="18dp"
                android:inputType="text"
                android:fontFamily="sans-serif-condensed-medium"
                android:id="@+id/correo_input" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="8sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Ingrese Nombre"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre y Apellidos"
                android:textColor="@color/black"
                android:textColorHint="#5D5D5D"
                android:textSize="18sp"
                android:background="@drawable/rounded_corner"
                android:padding="18dp"
                android:inputType="text"
                android:fontFamily="sans-serif-condensed-medium"
                android:id="@+id/user_input"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="8sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Crear ContraseÃ±a"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="6 Letras, Numeros y Caracteres"
                android:textColor="@color/black"
                android:textColorHint="#5D5D5D"
                android:textSize="18sp"
                android:background="@drawable/rounded_corner"
                android:padding="18dp"
                android:inputType="textPassword"
                android:fontFamily="sans-serif-condensed-medium"
                android:id="@+id/password_input" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">

            <Button
                android:paddingHorizontal="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crear Cuenta"
                android:background="@drawable/rounded_corner_black"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:id="@+id/register_button" />


        </LinearLayout>



    </LinearLayout>



</RelativeLayout>